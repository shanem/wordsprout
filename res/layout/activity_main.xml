<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    <LinearLayout
       	android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">
	    <TextView
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerHorizontal="true"
	        android:layout_centerVertical="true"
	        android:text="Learning modes"
	        tools:context=".MainActivity" />
		<Button
		    android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="Identify shapes"
	        android:onClick="identifyShape" />
		<Button
		    android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="Identify colors"
	        android:onClick="identifyColor" />
		<Button
		    android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="Identify body parts"
	        android:onClick="identifyBody" />
    </LinearLayout>
</RelativeLayout>
